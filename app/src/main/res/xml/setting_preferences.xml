<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
   <PreferenceCategory
       android:title="CLOUD SERVICES"
       >

      <Preference
          android:icon="@drawable/cloud_icon"
          android:title="Xiaomi Cloud"
          android:summary="Synced with the cloud"
          />
       <Preference
           android:title="Deleted notes in the cloud"
           android:icon="@drawable/delete_icon"
           android:summary="Coming soon!"
           />
   </PreferenceCategory>

       <PreferenceCategory
           android:title="STYLE">

           <ListPreference
               android:summary="Set the font size for the text"
               android:defaultValue="@string/pref_text_value"
               app:entries="@array/font_list"
               android:entryValues="@array/font_list"
                android:key="@string/pref_text_key"
               android:icon="@drawable/font_size_icon"
               android:title="Font size"
               />

           <ListPreference
               android:summary="Coming soon!"
               android:key="Sort"
               android:defaultValue="By creation date"
               app:entries="@array/sort_list"
               android:entryValues="@array/sort_list"
               android:title="Sort"
               android:icon="@drawable/sort_icon"
               />

           <PreferenceCategory
               android:title="QUICK FEATURES">

               <Preference
                    android:summary="Coming soon!"
                   android:icon="@drawable/baseline_note_alt_24"
                   android:title="Quick notes"
                   />



           </PreferenceCategory>
<PreferenceCategory
    android:title="REMINDERS">

    <SwitchPreference
        android:icon="@drawable/reminder_icon"
            android:title="High-priority reminders
                            "
        android:summary="Play sound even when Silent or
                            DND mode is on"
        />

</PreferenceCategory>

   </PreferenceCategory>

    <PreferenceCategory
        android:title="OTHER">
        <Preference
            android:icon="@drawable/privacy_icon"
            android:title="Privacy Policy"
            />

    </PreferenceCategory>






</PreferenceScreen>